# ── Core ──────────────────────────────────────────────────────
NODE_ENV=production
IS_PRODUCTION=true
PORT=5000
TRUST_PROXY=true

# ── Auth / JWT ────────────────────────────────────────────────
JWT_SECRET=
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL_DAYS=90
REFRESH_TOKEN_PEPPER=

# ── PostgreSQL ────────────────────────────────────────────────
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=melamedlaw
DB_USER=melamedlaw_app
DB_PASSWORD=
DB_SSL=false
# DB_POOL_MAX=20
# DB_POOL_IDLE_TIMEOUT_MS=30000
# DB_POOL_CONN_TIMEOUT_MS=5000

# ── Object Storage (Cloudflare R2 / S3) ──────────────────────
S3_ENDPOINT=
S3_BUCKET=
S3_KEY=
S3_SECRET=

# ── SMS (Smoove gateway) ─────────────────────────────────────
SMOOVE_BASE_URL=https://rest.smoove.io
SMOOVE_API_KEY=
# SMOOVE_SENDER_PHONE is stored in DB (platform_settings). Env fallback:
# SMOOVE_SENDER_PHONE=

# ── Email (SMTP / Transactional) ─────────────────────────────
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=

# ── Website / Deep-linking ────────────────────────────────────
WEBSITE_DOMAIN=client.melamedlaw.co.il

# ── Platform Admin ────────────────────────────────────────────
# Comma-separated user IDs that are platform admins
PLATFORM_ADMIN_USER_IDS=

# ── Signing OTP ───────────────────────────────────────────────
# SIGNING_OTP_ENABLED=false
# SIGNING_OTP_PEPPER=

# ── Android SMS Retriever (optional) ─────────────────────────
# ANDROID_SMS_RETRIEVER_HASH=

# ── Dev overrides (set false in prod) ─────────────────────────
FORCE_SEND_SMS_ALL=false
FORCE_SEND_EMAIL_ALL=false
# DEMO_OTP_PHONES=

# ── Rate Limiting (sensible defaults in code) ─────────────────
# RATE_LIMIT_IP_WINDOW_MS=60000
# RATE_LIMIT_IP_MAX=600
# RATE_LIMIT_AUTH_IP_WINDOW_MS=600000
# RATE_LIMIT_AUTH_IP_MAX=40
# RATE_LIMIT_USER_WINDOW_MS=300000
# RATE_LIMIT_USER_MAX=600

# ── Email Reminders Scheduler ─────────────────────────────────
# EMAIL_REMINDERS_ENABLED=true
# EMAIL_REMINDERS_DRY_RUN=false
# EMAIL_REMINDERS_SCHEDULER_ENABLED=true

# ── License Renewal Reminders ─────────────────────────────────
# LICENSE_RENEWAL_REMINDERS_ENABLED=true
# LICENSE_RENEWAL_REMINDERS_DRY_RUN=0

# ── Birthday Greetings Scheduler ──────────────────────────────
# BIRTHDAY_GREETINGS_SCHEDULER_ENABLED=true
