# Smoove base configuration
# Defaults to https://rest.smoove.io if omitted
SMOOVE_BASE_URL=https://rest.smoove.io
SMOOVE_API_KEY=

# Email (Transactional)
# Used by backend/utils/smooveEmailCampaignService.js for SIGN_INVITE
SMOOVE_EMAIL_FROM_NAME=
SMOOVE_EMAIL_FROM_EMAIL=
# Optional
SMOOVE_EMAIL_REPLY_TO=

# Dev-only: send real email even when not production
FORCE_SEND_EMAIL_ALL=false

# Production flag (existing)
IS_PRODUCTION=false

# Template-based email (recommended for all keys except SIGN_INVITE)
# These must match your Smoove template "name" exactly.
SMOOVE_EMAIL_SIGN_REMINDER_TEMPLATE_NAME=
SMOOVE_EMAIL_CASE_UPDATE_TEMPLATE_NAME=
SMOOVE_EMAIL_DOC_SIGNED_TEMPLATE_NAME=
SMOOVE_EMAIL_DOC_REJECTED_TEMPLATE_NAME=

# Optional legacy/fallback (not used for SIGN_INVITE currently)
# SMOOVE_EMAIL_SIGN_INVITE_TEMPLATE_NAME=
